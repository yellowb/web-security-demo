<body>

<p><a class="bg-primary" href="/login/logout">Logout</a>
<a class="bg-primary" href="/search">Search</a></p>

<div class="jumbotron text-center">
    <h1>Welcome!
        <mark><%= userid %></mark>
        . Post your comments!
    </h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 col-center-block">
            <form action="/comments/post" method="post">
                <div class="form-group">
                    <textarea style="font-size: 22pt" class="form-control" rows="4" id="comment" name="comment" placeholder="Write your comment here!"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <input type="reset" class="btn btn-default">
            </form>

        </div>
    </div>
</div>

<div class="container">
    <h2>Comments</h2>





    <ol class="list-group">
        <% for (var i = 0; i < comments.length; i++) { %>
        <li class="list-group-item">

            <h4 class="list-group-item-heading"><%- comments[i].comment %> by <%- comments[i].author %></h4>

            <% if(comments[i].canRemove) { %>
            <a href="<%= 'remove?id=' + comments[i].id %>">Remove</a>
            <% } %>


        </li>
        <% } %>
    </ol>

</div>

